Query 2 ‚Äì Create Table & Insert Values

CREATE TABLE employ (
    empno INTEGER,
    bpay  INTEGER,
    allow INTEGER,
    total INTEGER
);

INSERT INTO employ VALUES (31234, 25000, 1200, 0);
INSERT INTO employ VALUES (41242, 27000, 1000, 0);
INSERT INTO employ VALUES (12345, 30000, 2100, 0);
INSERT INTO employ VALUES (23415, 23000, 1200, 0);

